{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "cmps/*": ["app/shared/components/*"],
      "directives/*": ["app/shared/directives/*"],
      "services": ["app/shared/services"]
    },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
