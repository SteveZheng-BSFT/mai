{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "module/*": ["app/*"],
      "services/*": ["app/shared/services/*"],
      "styles": ["styles.scss"]
    },
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
